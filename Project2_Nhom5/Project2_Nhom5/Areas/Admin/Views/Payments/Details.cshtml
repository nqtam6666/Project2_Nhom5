@model Project2_Nhom5.Models.Payment

@{
    ViewData["Title"] = "Chi tiết Thanh toán";
}

<div class="d-flex justify-content-between align-items-center mb-4">
<div>
        <h2 class="mb-1">
            <i class="fas fa-eye me-2 text-info"></i>Chi tiết Thanh toán
        </h2>
        <p class="text-muted mb-0">Thông tin chi tiết về giao dịch #@Model.PaymentId.ToString("000000")</p>
    </div>
    <div class="d-flex gap-2">
        <a asp-action="Edit" asp-route-id="@Model?.PaymentId" class="btn btn-warning">
            <i class="fas fa-edit me-2"></i>Chỉnh sửa
        </a>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>Quay lại danh sách
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-4">
        <div class="card-dashboard">
            <div class="card-body text-center p-4">
                <div class="bg-primary text-white icon-circle-lg mx-auto mb-3">
                    <i class="fas fa-credit-card fa-2x"></i>
                </div>
                <h4 class="mb-2">#@Model.PaymentId.ToString("000000")</h4>
                <span class="badge bg-success mb-2">@Model.Amount.ToString("N0") VNĐ</span>
                @{
                    var methodClass = Model.PaymentMethod switch
                    {
                        "cash" => "bg-success",
                        "credit_card" => "bg-primary",
                        "bank_transfer" => "bg-info",
                        "momo" => "bg-warning",
                        "zalopay" => "bg-secondary",
                        _ => "bg-secondary"
                    };
                    var methodText = Model.PaymentMethod switch
                    {
                        "cash" => "Tiền mặt",
                        "credit_card" => "Thẻ tín dụng",
                        "bank_transfer" => "Chuyển khoản",
                        "momo" => "MoMo",
                        "zalopay" => "ZaloPay",
                        _ => Model.PaymentMethod
                    };
                }
                <span class="badge @methodClass">@methodText</span>
            </div>
        </div>
    </div>
    
    <div class="col-md-8">
        <div class="card-dashboard">
            <div class="card-body p-4">
                <h5 class="card-title mb-4">
                    <i class="fas fa-info-circle me-2 text-primary"></i>Thông tin chi tiết
                </h5>
                
                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="d-flex align-items-center p-3 bg-light rounded">
                            <div class="bg-primary text-white icon-circle me-3">
                                <i class="fas fa-dollar-sign"></i>
                            </div>
                            <div>
                                <small class="text-muted">Số tiền</small>
                                <div class="fw-bold">@Model.Amount.ToString("N0") VNĐ</div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="d-flex align-items-center p-3 bg-light rounded">
                            <div class="bg-info text-white icon-circle me-3">
                                <i class="fas fa-credit-card"></i>
                            </div>
                            <div>
                                <small class="text-muted">Phương thức</small>
                                <div class="fw-bold">@methodText</div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="d-flex align-items-center p-3 bg-light rounded">
                            <div class="bg-warning text-white rounded-circle p-2 me-3">
                                <i class="fas fa-calendar"></i>
                            </div>
                            <div>
                                <small class="text-muted">Ngày thanh toán</small>
                                <div class="fw-bold">@Model.PaymentDate?.ToString("dd/MM/yyyy HH:mm")</div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="d-flex align-items-center p-3 bg-light rounded">
                            <div class="bg-warning text-white rounded-circle p-2 me-3">
                                <i class="fas fa-ticket-alt"></i>
</div>
<div>
                                <small class="text-muted">Vé liên quan</small>
                                <div class="fw-bold">#@(Model.Ticket?.TicketId.ToString("000000") ?? "N/A")</div>
                                @if (Model.Ticket != null)
                                {
                                    <small class="text-muted">@Model.Ticket.Showtime?.Movie?.Title</small>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
